<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewAlarm"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/plus_math"
                android:id="@+id/imageViewTypeOff1"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_width="55dp"
                android:layout_height="55dp" />

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/strong"
                android:id="@+id/imageViewDif1"
                android:layout_width="50dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewTypeOff1"
                android:layout_marginStart="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTimeAlarm"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imageViewTypeOff1"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDateAlarm"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                app:layout_constraintTop_toBottomOf="@+id/textViewTimeAlarm"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imageViewTypeOff1"
                android:layout_marginLeft="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minLines="2"
                app:layout_constraintTop_toBottomOf="@+id/textViewDateAlarm"
                android:layout_marginEnd="32dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="32dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imageViewDif1"
                android:layout_marginLeft="16dp"
                app:layout_constraintHorizontal_bias="0.03"
                android:layout_marginTop="4dp"
                android:id="@+id/textView12"
                android:lines="2" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNameDate"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                android:checked="true"
                android:splitTrack="false"
                app:layout_constraintTop_toBottomOf="@+id/textViewNameDate"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="24dp" />
            <View
                android:layout_width="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imageViewDif1"
                android:layout_marginLeft="16dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
